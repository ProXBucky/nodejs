<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">User List</a>
        <a href="/upload">Update File</a>
    </div>

    <div style="padding-left:16px; margin-top: 30px;">
        <h1 style="text-align:center;">List users: </h1>
        <div class="w3-container" style="margin-top: 50px;">
            <table class="w3-table-all w3-hoverable">
                <thead>
                    <tr class="w3-light-grey">
                        <th>ID</th>
                        <th>Address</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>

                    <% for(var i=0 ; i < dataUser.length; i++) { %>
                        <tr>
                            <td>
                                <%= dataUser[i].id %>
                            </td>
                            <td>
                                <%= dataUser[i].firstName %>
                            </td>
                            <td>
                                <%= dataUser[i].lastName %>
                            </td>
                            <td>
                                <%= dataUser[i].address %>
                            </td>
                            <td>
                                <!-- <a class="fcc-btn" href="/detail/user/<%= dataUser[i].id %>">
                                        Detail
                                    </a> -->
                                <form action="/detail/user/<%= dataUser[i].id %>" method="get">
                                    <!-- <input type="text" hidden name="userId"> -->
                                    <button class="fcc-btn" type="submit">Detail</button>
                                </form>

                                <form action="/delete-user/" method="post">
                                    <input type="text" hidden value="<%= dataUser[i].id %>" name="userId">
                                    <button class="fcc-btn" type="submit">Delete</button>
                                </form>

                                <form action="/edit-user/<%= dataUser[i].id %>" method="get">
                                    <button class="fcc-btn" type="submit">Edit</button>
                                </form>
                            </td>
                        </tr>
                        <% } %>

                </tbody>

            </table>
        </div>



        <div class="form">

            <form action="/create-new-user" method="post">
                <div class="header">
                    <h3>Create a new user:</h3>
                </div>
                <div class="form-items">
                    <label for="">First Name: </label>
                    <input type="text" name="firstName">
                </div>
                <div class="form-items">
                    <label for="">Last Name: </label>
                    <input type="text" name="lastName">
                </div>
                <div class="form-items">
                    <label for="">Address: </label>
                    <input type="text" name="address">
                </div>
                <div class="form-items">
                    <label for="">Email: </label>
                    <input type="email" name="email">
                </div>
                <div class="form-items">
                    <button class="fcc-btn" type="submit">Create</button>
                </div>
            </form>
        </div>



        <!-- <%= dataUser %> -->



    </div>

</body>

</html>